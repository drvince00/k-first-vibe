# Cloudflare Pages Cache Headers
# NOTE: Later rules override earlier rules for the same header.
# So /* must come FIRST, then specific overrides follow.

# HTML pages - never cache (prevents blank screen after deployment)
/*
  Cache-Control: no-cache, no-store, must-revalidate

# Static assets - long cache (1 year, content-hashed filenames)
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Images - long cache (1 year)
/quiz/*
  Cache-Control: public, max-age=31536000, immutable

/congratulations/*
  Cache-Control: public, max-age=31536000, immutable

/*.ico
  Cache-Control: public, max-age=31536000, immutable

# Quiz data - moderate cache (1 day, revalidate)
/quizData.json
  Cache-Control: public, max-age=86400, stale-while-revalidate=604800

# SEO files - moderate cache (1 day)
/sitemap.xml
  Cache-Control: public, max-age=86400
  Content-Type: application/xml; charset=utf-8

/robots.txt
  Cache-Control: public, max-age=86400
  Content-Type: text/plain; charset=utf-8

/ads.txt
  Cache-Control: public, max-age=86400
  Content-Type: text/plain; charset=utf-8
